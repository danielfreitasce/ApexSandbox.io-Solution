public Integer nextPrime(Integer num) {

    if(num < 1) num = 1;
    Integer nextPrimeNum = num+1; 
    Boolean isNotPrime = false; 

    for(Integer i = 2; i <nextPrimeNum; i++){
        if(Math.mod(nextPrimeNum, i) == 0){
            isNotPrime = true;
            break;
        }
    }

    if(isNotPrime){
        nextPrimeNum = nextPrime(nextPrimeNum);
    }

    return nextPrimeNum; 
}
